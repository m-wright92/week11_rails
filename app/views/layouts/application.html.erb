<!DOCTYPE html>
<html>
  <head>
    <title>Mario's Specialty Foods</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= current_user.email %> | <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> | <%= link_to "Sign in", '/signin' %>
    <% end %>

    
    <%= flash[:alert]%>
    <%= flash[:notice]%>
    <%= yield %>
  </body>
</html>
