<h1>Add a new review</h1>

<%= render "layouts/errors", :object => @review %>
<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :rating %>
  <%= f.select(:rating, options_for_select(1..5)) %>
  <%= f.label "Review" %>
  <%= f.text_area :content_body %>
  <%= f.submit %>
<% end %>