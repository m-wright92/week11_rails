<h1>All available products</h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no products yet.</p>
<% end %>

<% if current_user.admin? %>
  <p><%= link_to "Add a new product", new_product_path %></p>
<% end %>
<%= link_to "Home", '/'%>